{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outFile": "build/output.js",
    "declaration": false
  },
  "exclude": [
    "node_modules",
    "coverage",
    "build",
    "scripts",
    "typings"
  ]
}